# Security Configuration Example
# Copy these settings to your .env file and configure as needed

# Enable/disable security checks (default: true)
SECURITY_ENABLED=true

# Maximum number of retry attempts when content is flagged (default: 2)
MAX_SECURITY_RETRIES=2

# OpenAI Moderation API (default: true)
OPENAI_MODERATION_ENABLED=true

# Google Perspective API (default: false - requires API key)
PERSPECTIVE_API_ENABLED=false
PERSPECTIVE_API_KEY=your_perspective_api_key_here

# Custom LLM-based security prompt (default: true)
CUSTOM_SECURITY_PROMPT_ENABLED=true

# Influencer RAG settings (used for regeneration)
INFLUENCER_RAG_TEMPERATURE=0.4
INFLUENCER_RAG_MAX_TOKENS=600
INFLUENCER_RAG_USE_CE=false

# OpenAI settings (for both main responses and security checks)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_RAG_MODEL=gpt-4.1-nano
